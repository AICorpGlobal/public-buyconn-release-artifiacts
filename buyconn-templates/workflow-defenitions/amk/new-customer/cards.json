    "customFields": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "uiType": "text",
            "label": "Field Name"
          },
          "value": {
            "type": "string",
            "uiType": "text",
            "label": "Field Value"
          }
        }
      },
      "uiType": "dynamicFields",
      "label": "Custom Fields"
    }
